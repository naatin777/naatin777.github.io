---
import { socialLink, socialIcon } from "../../styles/social-link.css";
import X from "../../assets/sns/x.svg";

interface Props {
    url: string;
    label: string;
}

const { url, label } = Astro.props;
---

<a
    href={url}
    target="_blank"
    rel="noopener noreferrer"
    class={socialLink}
    aria-label={label}
>
    <img src={X.src} alt="X" class={socialIcon} />
</a>
